<Window x:Class="OCR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OCR"
        mc:Ignorable="d"
        Title="OCR" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tboxImgPath" HorizontalAlignment="Left" Margin="92,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="243"/>
        <Label x:Name="labImgPath" Content="Image Path" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnTesseract" Content="Tesseract" HorizontalAlignment="Left" Margin="348,40,0,0" VerticalAlignment="Top" Click="btnTesseract_Click"/>
        <Label x:Name="labTessdataPath" Content="tessdata Path" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tboxTessdataPath" HorizontalAlignment="Left" Margin="92,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="243"/>
        <TextBox x:Name="tboxResults" HorizontalAlignment="Left" Margin="14,141,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="321" IsReadOnly="True"/>
        <Label x:Name="labResults" Content="Results" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
